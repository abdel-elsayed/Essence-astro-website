---
import BaseLayout from '../layouts/BaseLayout.astro';
import { business, siteMeta } from '../data/site';

const canonical = `${siteMeta.siteUrl}/about`;
const values = [
  {
    title: 'Evidence-based treatments',
    description: 'Led by licensed injectors and medical estheticians who continually train on the latest protocols.'
  },
  {
    title: 'Personalized care',
    description: 'Every visit begins with a thorough consultation so we can design a plan that matches your lifestyle and goals.'
  },
  {
    title: 'Spa-level comfort',
    description: 'From heated tables to aromatherapy and curated playlists, every detail is designed to soothe and restore.'
  }
];

const team = [
  {
    name: 'Dr. Simone Adler, DNP',
    role: 'Medical Director & Injector',
    bio: 'Board-certified nurse practitioner specializing in aesthetic medicine with a gentle, natural-dosing philosophy.'
  },
  {
    name: 'Lena Hawthorne, LE',
    role: 'Lead Esthetician',
    bio: 'Clinical esthetician with 10+ years helping clients transform their skin through advanced facials and home care coaching.'
  },
  {
    name: 'Jordan Patel, LMT',
    role: 'Body Ritual Specialist',
    bio: 'Licensed massage therapist certified in lymphatic drainage and body sculpting modalities.'
  }
];
---
<BaseLayout
  title="About Essence Med Spa and Wellness Center | Meet the Team"
  description="Discover the Essence Med Spa and Wellness Center philosophy, advanced technology, and licensed team serving Chicago's Edgebrook community." 
  canonical={canonical}
  currentPath="/about"
>
  <section class="bg-white pb-14 pt-16">
    <div class="container grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
      <div class="space-y-6">
        <p class="text-xs uppercase tracking-[0.4em] text-brand/80">Our Philosophy</p>
        <h1 class="font-display text-4xl text-neutral-900">Glow-first, downtime-minimal medspa care for Chicago.</h1>
        <p class="text-neutral-600">
          Essence Med Spa and Wellness Center was founded to bring together clinical-grade technology and the sensory calm of a boutique spa. By pairing evidence-backed modalities with personalized skin coaching, we design lasting results that look like you—rested, radiant, and confident.
        </p>
        <a href="/services" class="inline-flex items-center gap-2 text-sm font-semibold text-brand">
          Explore the service menu
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M5 12h14" stroke-linecap="round"></path>
            <path d="m13 6 6 6-6 6" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
      <div class="grid gap-6 rounded-3xl border border-neutral-200 bg-neutral-50 p-8 text-sm text-neutral-700">
        {values.map((value) => (
          <div class="space-y-2">
            <p class="text-xs uppercase tracking-[0.3em] text-neutral-500">{value.title}</p>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-neutral-50 py-16">
    <div class="container space-y-8">
      <div class="space-y-3">
        <h2 class="font-display text-3xl text-neutral-900">Meet the team</h2>
        <p class="max-w-2xl text-neutral-600">
          Licensed professionals obsessed with healthy, glowing skin. Expect bespoke protocols, honest education, and a partner in every stage of your skin journey.
        </p>
      </div>
      <div class="grid gap-8 md:grid-cols-3">
        {team.map((member) => (
          <article class="flex h-full flex-col gap-3 rounded-3xl border border-neutral-200 bg-white p-6 text-sm text-neutral-700">
            <h3 class="text-lg font-semibold text-neutral-900">{member.name}</h3>
            <p class="font-medium text-brand">{member.role}</p>
            <p>{member.bio}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="container grid gap-10 lg:grid-cols-[0.55fr_1fr] lg:items-center">
      <div class="space-y-4">
        <h2 class="font-display text-3xl text-neutral-900">A retreat in the heart of {business.address.city}.</h2>
        <p class="text-neutral-600">
          Cozy treatment suites, warm lighting, and curated playlists set the tone for transformative self-care. Sip on botanical tea, breathe deeply, and leave with personalized skin notes to maintain your glow long after your visit.
        </p>
        <a href="/gallery" class="inline-flex items-center gap-2 text-sm font-semibold text-brand">
          Peek inside the studio
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M5 12h14" stroke-linecap="round"></path>
            <path d="m13 6 6 6-6 6" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
      <div class="grid gap-6 rounded-3xl border border-neutral-200 bg-neutral-50 p-8 text-sm text-neutral-700">
        <div>
          <h3 class="text-xs uppercase tracking-[0.3em] text-neutral-500">Technology we love</h3>
          <ul class="mt-3 space-y-2">
            <li>Sciton BBL® HERO photofacial</li>
            <li>Lutronic Genius™ RF microneedling</li>
            <li>HydraFacial Syndeo™</li>
            <li>Alastin® Regenerating Skin Nectar</li>
          </ul>
        </div>
        <div>
          <h3 class="text-xs uppercase tracking-[0.3em] text-neutral-500">Membership perks</h3>
          <ul class="mt-3 space-y-2">
            <li>Quarterly skin plan updates</li>
            <li>Member-only event invites</li>
            <li>10% savings on retail products</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

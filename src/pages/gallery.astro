---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteMeta } from '../data/site';
import { assetImage } from '../data/assets';

const canonical = `${siteMeta.siteUrl}/gallery`;
const galleryItems = [
  { path: 'gallery/studio-tour/01-lobby.jpg', alt: 'Essence Med Spa lobby with seating area' },
  { path: 'gallery/studio-tour/02-treatment-room.jpg', alt: 'Treatment bed with warm lighting' },
  { path: 'gallery/studio-tour/03-retail-shelves.jpg', alt: 'Shelves of curated skincare products' },
  { path: 'gallery/studio-tour/04-facial-suite.jpg', alt: 'Calming facial treatment room' },
  { path: 'gallery/studio-tour/05-hot-stone-prep.jpg', alt: 'Massage therapist preparing hot stones' },
  { path: 'gallery/studio-tour/06-retail-detail.jpg', alt: 'Detail of spa retail display' }
].map((item) => ({
  ...item,
  asset: assetImage(item.path)
}));
---
<BaseLayout
  title="Essence Med Spa Gallery"
  description="Explore the calming interiors and treatment suites inside Essence Med Spa and Wellness Center in Chicago, Illinois."
  canonical={canonical}
  currentPath="/gallery"
>
  <section class="bg-white pb-14 pt-16">
    <div class="container space-y-6">
      <p class="text-xs uppercase tracking-[0.4em] text-brand/80">Inside the Studio</p>
      <h1 class="font-display text-4xl text-neutral-900">A calming retreat to recharge mind and skin.</h1>
      <p class="max-w-2xl text-neutral-600">
        Step into luminous treatment suites, cozy lounges, and curated retail moments designed to make every visit feel like a mini escape in Chicagoâ€™s Edgebrook neighborhood.
      </p>
    </div>
  </section>

  <section class="bg-neutral-50 pb-16">
    <div class="container">
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {galleryItems.map((item) => (
          <figure class="overflow-hidden rounded-3xl border border-neutral-200 bg-white shadow-sm">
            <img
              src={item.asset.url}
              alt={item.alt}
              class="h-64 w-full object-cover"
              loading="lazy"
            />
            <figcaption class="p-4 text-sm text-neutral-600">{item.alt}</figcaption>
          </figure>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

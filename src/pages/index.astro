---
import BaseLayout from '../layouts/BaseLayout.astro';
import { business, siteMeta } from '../data/site';
import { featuredServices as featuredServiceItems } from '../data/services';

const featuredServices = featuredServiceItems.slice(0, 3);
const streetAddress = [business.address.street, business.address.suite].filter(Boolean).join(', ');
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'MedicalSpa',
  name: business.name,
  description: business.description,
  url: siteMeta.siteUrl,
  telephone: business.phone,
  address: {
    '@type': 'PostalAddress',
    streetAddress,
    addressLocality: business.address.city,
    addressRegion: business.address.state,
    postalCode: business.address.postalCode,
    addressCountry: 'US'
  }
};

const testimonials = [
  {
    quote:
      'I left glowing! The team took time to explain every step so I felt totally comfortable.',
    name: 'Alyssa R.'
  },
  {
    quote:
      'Booking online was effortless and the studio feels like a calming boutique hotel.',
    name: 'Monique L.'
  },
  {
    quote:
      'My fine lines are softer already. Their aftercare plan made recovery so easy.',
    name: 'Rachel P.'
  }
];

const faqs = [
  {
    question: 'Do you offer consultations for new guests?',
    answer:
      'Yes. Every new guest begins with a complimentary consultation to review skin goals, health history, and design a custom plan.'
  },
  {
    question: 'Which products do you use during treatments?',
    answer:
      'We partner with medical-grade lines including Skinbetter Science®, iS Clinical®, and Alastin® to ensure active, results-driven formulas.'
  },
  {
    question: 'What is your cancellation policy?',
    answer:
      'We request 24 hours notice to reschedule or cancel. Same-day cancellations incur a $50 fee so we can honor our practitioners’ time.'
  }
];
---
<BaseLayout
  title="Essence Med Spa and Wellness Center | Chicago Med Spa"
  description="Chicago's Essence Med Spa and Wellness Center offers facials, injectables, and wellness rituals with transparent pricing and online booking."
  structuredData={structuredData}
>
  <section class="relative overflow-hidden bg-white pb-12 pt-14">
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_#F9E6E6_0%,_#ffffff_55%)]"></div>
    <div class="container grid gap-12 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.95fr)] lg:items-center">
      <div class="space-y-6">
        <span class="inline-flex rounded-full border border-brand/30 px-4 py-1 text-xs uppercase tracking-[0.3em] text-brand">
          Edgebrook · Chicago, IL
        </span>
        <h1 class="font-display text-4xl leading-[1.1] tracking-tight text-neutral-900 sm:text-5xl">
          Advanced skincare rituals for luminous, long-lasting results.
        </h1>
        <p class="text-lg text-neutral-600 sm:max-w-lg">
          Personalized facials, injectables, and body therapies designed by licensed clinicians. Every treatment begins with a conversation and ends with a radiant glow.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/book" class="rounded-xl bg-brand px-6 py-3 text-sm font-semibold text-white shadow-soft transition hover:bg-brand-dark">
            Reserve an appointment
          </a>
          <a href="#services" class="rounded-xl border border-neutral-200 px-6 py-3 text-sm font-semibold text-neutral-900 hover:border-brand-dark">
            View services
          </a>
        </div>
        <dl class="grid gap-6 sm:grid-cols-3">
          <div>
            <dt class="text-xs uppercase tracking-[0.2em] text-neutral-500">Combined experience</dt>
            <dd class="mt-1 text-3xl font-semibold text-neutral-900">25+ yrs</dd>
          </div>
          <div>
            <dt class="text-xs uppercase tracking-[0.2em] text-neutral-500">Guest satisfaction</dt>
            <dd class="mt-1 text-3xl font-semibold text-neutral-900">4.9 ★</dd>
          </div>
          <div>
            <dt class="text-xs uppercase tracking-[0.2em] text-neutral-500">Average downtime</dt>
            <dd class="mt-1 text-3xl font-semibold text-neutral-900">Minimal</dd>
          </div>
        </dl>
      </div>
      <div class="relative">
        <div class="absolute -top-10 -left-6 hidden h-32 w-32 rounded-full bg-brand/10 blur-2xl md:block"></div>
        <img
          src="https://images.unsplash.com/photo-1556228578-8c89e6adf883?auto=format&fit=crop&w=1200&q=80"
          alt="Medspa treatment in serene setting"
          class="h-full w-full rounded-[26px] object-cover shadow-soft"
          loading="lazy"
        />
        <div class="absolute -bottom-10 right-6 hidden w-36 rounded-2xl bg-white p-4 shadow-soft md:block">
          <p class="text-xs uppercase tracking-[0.25em] text-neutral-500">Featured</p>
          <p class="mt-1 font-display text-lg text-neutral-900">Hydro Glow Facial</p>
          <p class="text-xs text-neutral-500">60 minutes · $150</p>
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="bg-neutral-50 py-16">
    <div class="container space-y-10">
      <div class="max-w-2xl space-y-3">
        <h2 class="font-display text-3xl text-neutral-900">Tailored services, transparent pricing.</h2>
        <p class="text-neutral-600">
          Explore our most-requested facials, injectables, and advanced skin therapies. Every service includes a consultation and curated home care recommendations.
        </p>
      </div>
      <div class="grid gap-8 md:grid-cols-3">
        {featuredServices.map((service) => (
          <article class="group flex h-full flex-col rounded-3xl border border-neutral-200 bg-white">
            <div class="overflow-hidden rounded-3xl rounded-b-none">
              {service.highlights && service.highlights.length > 0 ? (
                <div class="bg-brand/5 px-6 py-5 text-sm text-neutral-700">
                  <p class="font-semibold text-neutral-900">Why guests love it</p>
                  <ul class="mt-2 space-y-1">
                    {service.highlights.slice(0, 2).map((highlight) => (
                      <li class="flex gap-2">
                        <span class="mt-1 h-1.5 w-1.5 rounded-full bg-brand"></span>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ) : (
                <img
                  src="https://images.unsplash.com/photo-1556228578-8c89e6adf883?auto=format&fit=crop&w=1200&q=80"
                  alt="Spa treatment"
                  class="h-52 w-full object-cover transition duration-500 group-hover:scale-[1.03]"
                  loading="lazy"
                />
              )}
            </div>
            <div class="flex flex-1 flex-col gap-4 p-6">
              <div>
                <h3 class="font-semibold text-lg text-neutral-900">{service.title}</h3>
                {service.excerpt && <p class="mt-2 text-sm text-neutral-600">{service.excerpt}</p>}
              </div>
              <div class="mt-auto flex items-center justify-between text-sm text-neutral-700">
                <span>{service.price}</span>
                {service.duration && <span>{service.duration}</span>}
              </div>
              <a
                href={`/services/${service.slug}`}
                class="inline-flex items-center gap-2 text-sm font-medium text-brand"
              >
                Learn more
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M5 12h14" stroke-linecap="round"></path>
                  <path d="m13 6 6 6-6 6" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
      <div class="flex flex-wrap items-center justify-between gap-4 rounded-3xl border border-brand/30 bg-white p-6">
        <div class="max-w-xl text-sm text-neutral-600">
          Prefer a custom plan? Combine facials, lymphatic drainage, and injectables in one visit with a savings bundle tailored to your skin goals.
        </div>
        <a href="/services" class="rounded-xl bg-brand px-6 py-3 text-sm font-semibold text-white shadow-soft hover:bg-brand-dark">
          Explore the full menu
        </a>
      </div>
    </div>
  </section>

  <section class="container py-16">
    <div class="grid gap-10 lg:grid-cols-[0.6fr_1fr] lg:items-center">
      <div class="space-y-4">
        <h2 class="font-display text-3xl text-neutral-900">Clinical expertise with a spa finish.</h2>
        <p class="text-neutral-600">
          Our licensed injectors and estheticians craft comprehensive protocols blending evidence-based modalities with restorative touches so you feel as good as you look.
        </p>
        <ul class="space-y-3 text-sm text-neutral-700">
          <li class="flex items-start gap-3">
            <span class="mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full bg-brand/15 text-brand">✓</span>
            Personalized consultation before every service
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full bg-brand/15 text-brand">✓</span>
            Medical-grade technology with minimal downtime
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full bg-brand/15 text-brand">✓</span>
            Curated home care plans to extend your glow
          </li>
        </ul>
        <a href="/about" class="inline-flex items-center gap-2 text-sm font-semibold text-brand">
          Meet the team
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M5 12h14" stroke-linecap="round"></path>
            <path d="m13 6 6 6-6 6" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
      <div class="grid gap-6 rounded-3xl bg-neutral-50 p-8 sm:grid-cols-2">
        {testimonials.map((item) => (
          <blockquote class="rounded-2xl border border-neutral-200 bg-white p-6 text-sm text-neutral-600 shadow-sm">
            “{item.quote}”
            <span class="mt-3 block text-xs font-semibold uppercase tracking-[0.2em] text-neutral-500">
              {item.name}
            </span>
          </blockquote>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-neutral-900 py-16 text-neutral-50">
    <div class="container grid gap-12 lg:grid-cols-[minmax(0,1fr)_minmax(0,1fr)] lg:items-center">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.4em] text-brand/80">Glow smarter</p>
        <h2 class="font-display text-3xl text-white">FAQs & pre-appointment prep</h2>
        <p class="text-neutral-300">
          Know exactly what to expect before you arrive. Our team will share tailored prep and post-care instructions during your consultation.
        </p>
      </div>
      <dl class="space-y-4">
        {faqs.map((faq) => (
          <div class="rounded-2xl border border-neutral-800 bg-neutral-950/40 p-5">
            <dt class="text-sm font-semibold text-white">{faq.question}</dt>
            <dd class="mt-2 text-sm text-neutral-300">{faq.answer}</dd>
          </div>
        ))}
      </dl>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="container flex flex-col gap-6 rounded-3xl bg-brand px-10 py-12 text-white shadow-soft lg:flex-row lg:items-center lg:justify-between">
      <div class="space-y-3">
        <h2 class="font-display text-3xl leading-snug">Begin your treatment plan.</h2>
        <p class="max-w-xl text-sm text-white/80">
          Reserve an in-studio consultation or book your next facial in moments. We’ll design a treatment roadmap and send personalized prep tips straight to your inbox.
        </p>
      </div>
      <div class="flex flex-wrap gap-3">
        <a href="/book" class="rounded-xl bg-white px-6 py-3 text-sm font-semibold text-brand transition hover:bg-neutral-100">
          Book online
        </a>
        <a href={business.phoneHref} class="rounded-xl border border-white/60 px-6 py-3 text-sm font-semibold text-white hover:bg-white/10">
          Call {business.phone}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
